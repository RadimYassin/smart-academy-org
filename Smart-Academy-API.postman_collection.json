{
    "info": {
        "name": "Smart Academy Microservices API",
        "description": "Complete API collection for Smart Academy platform with JWT authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "gateway_url",
            "value": "http://localhost:8888",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "Login (Get JWT Token)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('jwt_token', jsonData.accessToken);",
                                    "    pm.collectionVariables.set('user_id', jsonData.userId);",
                                    "    console.log('JWT Token saved:', jsonData.accessToken);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{gateway_url}}/user-management-service/api/v1/auth/login",
                            "host": [
                                "{{gateway_url}}"
                            ],
                            "path": [
                                "user-management-service",
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. LMS Connector",
            "item": [
                {
                    "name": "Health Check (Public)",
                    "request": {
                        "auth": {
